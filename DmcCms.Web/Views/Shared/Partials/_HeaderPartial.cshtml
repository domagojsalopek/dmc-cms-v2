@{
    string searchKey = "q";
    var appConfig = Html.GetAppConfig();
}
<header id="header" class="full-header">
    <div id="header-wrap">
        <div class="container clearfix">
            <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
            <div id="logo">
                <a href="@Url.Content("~/")" class="standard-logo"><img src="@(Url.Content(appConfig.SiteResources.Logo ?? "~/resources/custom/site-logo.png"))" alt="@appConfig.SiteSettings.Name"></a>
                <a href="@Url.Content("~/")" class="retina-logo"><img src="@(Url.Content(appConfig.SiteResources.RetinaLogo ?? "~/resources/custom/site-logo2x.png"))" alt="@appConfig.SiteSettings.Name"></a>
            </div><!-- #logo end -->
            <div id="top-account" class="dropdown">
                <a data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Random post" data-notify-type="success" data-notify-msg="<i class=icon-info-sign></i> Loading ..." data-url="@Url.Action("random", "service")" class="btn btn-success btn-sm" href="#" id="menu-random-post"><i class="icon-random1" style="display:inline-block"></i></a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="#" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="icon-user" style="display:inline-block"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                        <a class="dropdown-item tleft" href="@Url.Action("index", "account")">Profile</a>
                        <a class="dropdown-item tleft" href="@Url.Action("manageexternallogins", "account")">Manage logins</a>
                        <div class="dropdown-divider"></div>
                        <a id="menu_logout" class="dropdown-item tleft" href="#" data-url="@Url.Action("logoff", "account")">Logout <i class="icon-signout"></i></a>
                    </ul>
                }
                else
                {
                    <a data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Login" class="btn btn-secondary btn-sm" href="#modal-login" data-lightbox="inline" data-toggle="modal" data-target="modal-login"><i class="icon-line2-user" style="display:inline-block"></i></a>
                }
            </div>
            <nav id="primary-menu">
                <ul>
                    <li><a href="/"><div>Home</div></a></li>
                    <li><a href="@Url.Action("details", "page", new { slug = "about" })"><div>About</div></a></li>
                    <li><a href="@Url.Action("index", "contact")"><div>Contact</div></a></li>
                </ul>
                <div id="top-search">
                    <a title="Search" href="#" id="top-search-trigger"><i class="icon-search3"></i><i class="icon-line-cross"></i></a>
                    <form action="@Url.Action("index", "search")" method="get" data-notify-type="error" data-notify-msg="Query must be at least 3 characters long.">
                        <input type="text" name="@searchKey" class="form-control" value="@Request.QueryString[searchKey]" placeholder="Type &amp; Hit Enter.." data-minquery="3">
                    </form>
                </div>
            </nav>
        </div>
    </div>
</header>