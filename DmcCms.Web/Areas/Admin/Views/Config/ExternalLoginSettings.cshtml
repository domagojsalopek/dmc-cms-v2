@model Dmc.Cms.Web.ViewModels.AdminExternalLoginSettingsViewModel

@{
    ViewBag.Title = "External Login Settings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.Partial("Partials/_ValidationPartial")

    for (int i = 0; i < Model.Settings.Count; i++)
    {
        <div>
            <h3>@Model.Settings[i].ServiceIdentifier</h3>
            @Html.HiddenFor(o => Model.Settings[i].ServiceIdentifier)
            <div class="form-group">
                @Html.LabelFor(o => Model.Settings[i].Name)
                @Html.TextBoxFor(o => Model.Settings[i].Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(o => Model.Settings[i].ClientId)
                @Html.TextBoxFor(o => Model.Settings[i].ClientId, new { @class = "form-control" })
            </div>
        </div>
        <hr />
    }

    <p>
        <input type="submit" value="Save" class="btn btn-default" />
    </p>
}