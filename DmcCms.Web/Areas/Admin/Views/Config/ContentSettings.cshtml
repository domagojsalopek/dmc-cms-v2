@model Dmc.Cms.App.ContentSettings
@{
    ViewBag.Title = "Content Settings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.Partial("Partials/_ValidationPartial")

    <div class="form-group">
        @Html.LabelFor(o => o.IsAdvertisingEnabled)
        @Html.CheckBoxFor(o => o.IsAdvertisingEnabled)
    </div>

    <div class="form-group">
        @Html.LabelFor(o => o.IsShowingEventsEnabled)
        @Html.CheckBoxFor(o => o.IsShowingEventsEnabled)
    </div>

    <p>
        <input type="submit" value="Save" class="btn btn-default" />
    </p>
}