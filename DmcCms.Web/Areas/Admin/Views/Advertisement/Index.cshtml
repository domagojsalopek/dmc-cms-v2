@model EntityList
@{
    AdminAdvertisementViewModel viewModel = new AdminAdvertisementViewModel();
    var results = new EntityList<AdminAdvertisementViewModel>(Model);
    ViewBag.Title = "Advertisements";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New »", "Create", "Advertisement", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => viewModel.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in results.Results)
    {
        <tr id="item-@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, controller = "Advertisement", area = "admin" }, new { @class = "btn btn-primary" })
                </p>
            </td>
            <td class="danger">
                @*<p>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, controller = "category", area = "admin" }, new { @class = "btn btn-danger delete", @rel = item.Id })
                </p>*@
            </td>
        </tr>
    }

</table>